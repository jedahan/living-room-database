{
  "name": "living-room-database",
  "version": "0.2.0",
  "description": "A Datalog-style database that enables programmers to represent facts in natural language.",
  "main": "dist/RoomDB.js",
  "dependencies": {
    "browserify": "^15.2.0",
    "node-fetch": "^1.7.3",
    "ohm-js": "^0.14.0",
    "prettier-standard": "^8.0.1",
    "restify": "^6.3.4",
    "restify-cors-middleware": "^1.1.0",
    "restify-errors": "^5.0.0",
    "uglify-es": "^3.3.10"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "npm-run-all": "^4.1.2",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jedahan/living-room-database.git"
  },
  "keywords": [
    "datalog",
    "natural",
    "language",
    "dynamicland",
    "harc"
  ],
  "author": "Alex Warth <alexwarth@gmail.com> (http://alexwarth.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jedahan/living-room-database/issues"
  },
  "homepage": "https://github.com/jedahan/living-room-database#readme",
  "scripts": {
    "clean": "rm dist/*",
    "build-web": "node node_modules/browserify/bin/cmd.js src/roomdb-web.js -s roomdb -o dist/roomdb-web.js && node node_modules/uglify-es/bin/uglifyjs dist/roomdb-web.js > dist/roomdb-web.min.js",
    "server": "node src/server.js",
    "format": "prettier-standard src/*js",
    "build": "npm-run-all build:* test",
    "build:dev": "NODE_ENV=development rollup --config",
    "build:prod": "rollup --config",
    "develop": "nodemon --watch src --watch tests --exec 'yarn build'",
    "test": "ava tests/*"
  }
}
